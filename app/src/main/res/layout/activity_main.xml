<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="akashneil.com.cardista.MainActivity"
    android:background="#311b92">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/buttonThree"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="tapButtonThree" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5"
        android:id="@+id/buttonHalf"
        android:onClick="tapButtonHalf"
        android:layout_alignTop="@+id/buttonZero"
        android:layout_toRightOf="@+id/buttonZero"
        android:layout_toEndOf="@+id/buttonZero" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="260sp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/buttonOne"
        android:onClick="tapButtonOne"
        android:layout_above="@+id/buttonFive"
        android:layout_toRightOf="@+id/buttonHalf"
        android:layout_toEndOf="@+id/buttonHalf" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/buttonTwo"
        android:layout_alignTop="@+id/buttonOne"
        android:layout_toRightOf="@+id/buttonOne"
        android:layout_toEndOf="@+id/buttonOne"
        android:onClick="tapButtonTwo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/buttonZero"
        android:onClick="tapButtonZero"
        android:layout_above="@+id/buttonThree"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/buttonFive"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonThree"
        android:layout_toEndOf="@+id/buttonThree"
        android:onClick="tapButtonFive" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/buttonEight"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonFive"
        android:layout_toEndOf="@+id/buttonFive"
        android:onClick="tapButtonEight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:id="@+id/buttonThirteen"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonEight"
        android:layout_toEndOf="@+id/buttonEight"
        android:onClick="tapButtonThirteen" />
</RelativeLayout>
